
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- META SECTION -->
    <title>School Support</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- END META SECTION -->
    <!-- CSS INCLUDE -->
    <link rel="stylesheet" type="text/css" id="theme" href="~/MyUIContent/css/theme-default.css" />
    <!-- EOF CSS INCLUDE -->
</head>
<body style="background-color: dimgrey; background-size: cover; background-position: center">
    <!-- START PAGE CONTAINER -->
    <div class="page-container">

        <!-- START PAGE SIDEBAR -->
        <div class="page-sidebar">
            <!-- START X-NAVIGATION -->
            <!-- START X-NAVIGATION -->
            <ul class="x-navigation">
                <li class="xn-logo">
                    <a href="index.html"></a>
                    <a href="#" class="x-navigation-control"></a>
                </li>

                <li class="xn-title" style="color: white">Welcome @User.Identity.Name.ToUpper()</li>
                <li class="active">
                    <a href="/Home/Index">
                        <span class="fa fa-desktop"></span> <span class="xn-text">Home</span>
                    </a>
                </li>
                <li class="active">
                    <a href="/Common/Ticket/ViewReply">
                        <span class="fa fa-desktop"></span> <span class="xn-text">View Reply</span>
                    </a>
                </li>
 
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="active">
                        <a href="/Security/Account/Home">
                            <span class="fa fa-desktop"></span> <span class="xn-text">Dashboard</span>
                        </a>
                    </li>
                    <li class="xn-openable">
                        <a href="#">
                            <span class="glyphicon glyphicon-circle-arrow-right"></span> <span class="xn-text">Admin</span>
                        </a>
                        <ul>
                            <li>
                                <a href="/Admin/Support/Index">
                                    <span class="glyphicon glyphicon-globe"></span> View Complains
                                </a>
                            </li>

                            <li>
                                <a href="/Admin/Support/Index">
                                    <span class="glyphicon glyphicon-globe"></span> Reply Complains
                                </a>
                            </li>

                            <li>
                                <a href="/Admin/Support/GetTicketDetailsByDate">
                                    <span class="glyphicon glyphicon-globe"></span> View Complain by Date
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/Support/ViewStudentDetails">
                                    <span class="glyphicon glyphicon-globe"></span> View Student Details
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/ViewReport/Index">
                                    <span class="glyphicon glyphicon-globe"></span> View Report
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
            <!-- END X-NAVIGATION -->
            <!-- END X-NAVIGATION -->
        </div>
        <!-- END PAGE SIDEBAR -->
        <!-- PAGE CONTENT -->
        <div class="page-content">

            <!-- START X-NAVIGATION VERTICAL -->
            <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                <!-- TOGGLE NAVIGATION -->
                <li class="xn-icon-button">
                    <a href="#" class="x-navigation-minimize">
                        <span class="fa fa-dedent"></span>
                    </a>
                </li>
                <!-- END TOGGLE NAVIGATION -->
                <!-- SIGN OUT -->
                <li class="xn-icon-button pull-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="#" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
                    }
                    else
                    {
                        @Html.ActionLink("Login", "Login", new { area = "security", Controller = "Account" }, new { @Class = "btn btn-success btn-lg" })
                    }

                </li>
                <!-- END SIGN OUT -->

            </ul>

            @RenderBody()
            <hr />
            <footer class="navbar-fixed-bottom" style="background: white">
                <div class="row">
                    <div class="col-md-offset-4 col-md-4">
                        &copy; @DateTime.Now.Year - Support Service
                    </div>
                    <div class="col-md-4" style="text-align: right">
                        Powered by <img class="image" style="height: 30px; width: 30px" src="~/Content/images/lloydant.jpeg" />
                    </div>


                </div>

            </footer>

        </div>

        <!-- END PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTAINER -->
    <!-- MESSAGE BOX-->


    <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
        <div class="mb-container">

            <div class="mb-middle">
                <div class="mb-title">

                    <span class="fa fa-sign-out"></span>

                    Log <strong>Out</strong> ?
                </div>
                <div class="mb-content">
                    <p>Are you sure you want to log out?</p>
                </div>
                <div class="mb-footer">
                    <div class="pull-right">
                        @Html.ActionLink("Yes", "LogOff", new { area = "Security", Controller = "Account" }, new { @Class = "btn btn-success btn-lg" })
                        <button class="btn btn-default btn-lg mb-control-close">
                            No
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MESSAGE BOX-->
    <!-- START PLUGINS -->
    <script type="text/javascript"
            src="~/MyUIContent/js/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript"
            src="~/MyUIContent/js/plugins/jquery/jquery-ui.min.js"></script>
    <script type="text/javascript"
            src="~/MyUIContent/js/plugins/bootstrap/bootstrap.min.js"></script>
    <!-- END PLUGINS -->
    <!-- START THIS PAGE PLUGINS-->
    <script type='text/javascript' src='~/MyUIContent/js/plugins/icheck/icheck.min.js'></script>
    <script type="text/javascript" src="~/MyUIContent/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js"></script>
    <script type="text/javascript" src="~/MyUIContent/js/plugins/scrolltotop/scrolltopcontrol.js"></script>

    <script type="text/javascript" src="~/MyUIContent/js/plugins/morris/raphael-min.js"></script>
    <script type="text/javascript" src="~/MyUIContent/js/plugins/morris/morris.min.js"></script>
    <script type="text/javascript" src="~/MyUIContent/js/plugins/rickshaw/d3.v3.js"></script>
    <script type="text/javascript" src="~/MyUIContent/js/plugins/rickshaw/rickshaw.min.js"></script>
    <script type='text/javascript' src='~/MyUIContent/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js'></script>
    <script type='text/javascript'
            src='~/MyUIContent/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js'></script>
    <script type='text/javascript'
            src='~/MyUIContent/js/plugins/bootstrap/bootstrap-datepicker.js'></script>
    <script type="text/javascript"
            src="~/MyUIContent/js/plugins/owl/owl.carousel.min.js"></script>

    <script type="text/javascript"
            src="~/MyUIContent/js/plugins/moment.min.js"></script>
    <script type="text/javascript"
            src="~/MyUIContent/js/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- END THIS PAGE PLUGINS-->
    <!-- START TEMPLATE -->
    <script type="text/javascript"
            src="~/MyUIContent/js/settings.js"></script>

    <script type="text/javascript"
            src="~/MyUIContent/js/plugins.js"></script>
    <script type="text/javascript"
            src="~/MyUIContent/js/actions.js"></script>

    <script type="text/javascript"
            src="~/MyUIContent/js/demo_dashboard.js"></script>
    <!-- END TEMPLATE -->
    <!-- END SCRIPTS -->
</body>
</html>
