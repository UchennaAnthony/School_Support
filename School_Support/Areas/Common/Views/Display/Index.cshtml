@model School_Support.Areas.Admin.ViewModels.SupportViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@if (TempData["Msg"] != null)
{
    <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["Msg"].ToString()
    </div>
}
<br/>
<center>
    <h2>THANK YOU</h2>
    <br/><br/>
    <p>
        Please Check back in the next 12 hours for your reply. Use the view Reply button and Input your Ticket Number to view your reply.
        <br/>
        <br/>
        <b>Your ticket number is: @Model.Ticket.TicketNumber</b>
        <br/>
        <br/><br/>
        please copy your Ticket Number and Keep Safe for future reference.

    </p>
</center>



