@model School_Support.Areas.Admin.ViewModels.SupportViewModel

@{
    ViewBag.Title = "EditTicket";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@if (TempData["Msg"] != null)
{
    <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["Msg"].ToString()
    </div>
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-fw fa-user"></i>Edit Ticket Details</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("EditTicket", "Support", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="panel panel-primary ">
            <div class="panel-body ">
                <div class="form-group">
                    @Html.LabelFor(model => model.Ticket.TicketNumber, new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Ticket.TicketNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Ticket.TicketNumber, null, new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="form-group">
                    @Html.LabelFor(model => model.Student.MatricNumber, new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Student.MatricNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Student.MatricNumber, null, new { @class = "text-danger" })
                    </div>
                </div>*@
                <div class="form-group">
                    @Html.LabelFor(model => model.Ticket.Complain, "Complain", new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Ticket.Complain, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Ticket.Complain, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ticket.Reply, "Reply", new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.Ticket.Reply, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Ticket.Reply, null, new { @class = "text-danger" })
                    </div>
                    <br />

                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <br/>
                            <input class="btn btn-primary mr5" type="submit" name="submit" id="submit" value="Update" />

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

        }
        </div>
