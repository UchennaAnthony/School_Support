@model School_Support.Areas.Admin.ViewModels.SupportViewModel

@{
    ViewBag.Title = "ViewTicketDetails";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@if (TempData["Msg"] != null)
{
    <div class="alert alert-dismissible alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
       @TempData["Msg"].ToString()
        </div>
}
@using (Html.BeginForm("Index","Support", FormMethod.Post))
 {
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="panel panel-primary custom-text-white">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-fw fa-user"></i>Ticket Details</h3>
            </div>
            <div class="panel panel-primary ">
                <div class="panel-body ">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ticket.TicketNumber,"TICKET NO", new { @class = "col-sm-2 control-label " })
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => model.Ticket.TicketNumber, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ticket.Student.MatricNumber,"MATRIC NO", new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Ticket.Student.MatricNumber, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ticket.Complain, "COMPLAIN", new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Ticket.Complain, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Ticket.Reply, "REPLY", new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Ticket.Reply, new { @class = "form-control" })
                    </div>
                </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">

                        @Html.ActionLink("Edit", "EditTicket", "Support", new { Area = "Admin", @id = @Model.Ticket.Id }, new { @class = "btn btn-success mr5" }) |
                        @Html.ActionLink("Back", "Index", "Support", new { Area = "Admin" }, new { @class = "btn btn-success mr5" })


                    </div>
                </div>
            </div>
        </div>
  }


